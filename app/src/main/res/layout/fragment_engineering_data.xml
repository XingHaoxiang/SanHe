<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.zhuancheng.sanhedefence.presentation.fragment.EngineeringDataFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/quality_item_title"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:text="@string/engineering_data_fragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/engineering_bg"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="序号"
            android:layout_weight="0.2"
            android:textColor="@color/quality_item_title"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="工程名称"
            android:layout_weight="0.5"
            android:textColor="@color/quality_item_title"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="状态"
            android:layout_weight="0.3"
            android:textColor="@color/quality_item_title"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="资料"
            android:layout_weight="0.2"
            android:textColor="@color/quality_item_title"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/engineer_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
