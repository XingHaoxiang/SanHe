<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/site_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_site_title"
                android:textColor="@color/quality_item_title"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_site_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐蔽工程预埋验收"
                android:textColor="@color/quality_item_title"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/site_pro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/site_title"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_site_pro_name" />

            <TextView
                android:id="@+id/item_site_pro_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="君晓家园小区人防工程项目" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:src="@drawable/main_icon_rightward"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/site_add_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <ImageView
            android:id="@+id/site_iv1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/login_bg_sky" />

        <ImageView
            android:id="@+id/site_iv2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/site_iv1"
            android:layout_marginRight="10dp"
            android:src="@drawable/login_bg_sky" />

        <ImageView
            android:id="@+id/site_iv3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/site_iv2"
            android:layout_marginRight="10dp"
            android:src="@drawable/login_bg_sky" />

        <ImageView
            android:id="@+id/site_iv4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/site_iv3"
            android:layout_marginRight="10dp"
            android:src="@drawable/login_bg_sky" />
    </RelativeLayout>

    <TextView
        android:id="@+id/site_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="2017年5月6日21:41:19"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>