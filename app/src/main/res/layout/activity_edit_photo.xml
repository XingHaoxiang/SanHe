<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/activity_site_quality"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.zhuancheng.sanhedefence.presentation.activity.EditPhotoActivity">

        <include
            android:id="@+id/site_quality_title"
            layout="@layout/action_bar" />

        <LinearLayout
            android:id="@+id/site_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/site_quality_title"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:padding="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="工程名称" />

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edittext_border"
                    android:layout_weight="0.7"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="工程地点" />

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.7"
                    android:background="@drawable/edittext_border"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:text="监督登记号" />

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.7"
                    android:background="@drawable/edittext_border"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="联系人" />

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.7"
                    android:background="@drawable/edittext_border"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="联系电话" />

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.7"
                    android:background="@drawable/edittext_border"
                    />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/content_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_below="@id/site_content"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/tv_content_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容说明" />

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/tv_content_details"
                android:background="@drawable/edittext_border"
                />
        </RelativeLayout>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/edit_photo_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_details"
            android:layout_centerHorizontal="true"
            android:background="@drawable/quality_detail_button"
            android:text="@string/photo_edit_save"
            android:textColor="@color/engineering_bg"
            android:layout_marginTop="25dp"
            android:textSize="16sp" />

    </RelativeLayout>
</ScrollView>