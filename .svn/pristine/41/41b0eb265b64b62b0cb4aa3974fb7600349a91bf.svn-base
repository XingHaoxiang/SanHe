<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:padding="16dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:id="@+id/side_item_refresh_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/side_pull_icon_check_update"
            />
        <TextView
            android:id="@+id/side_item_refresh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_toRightOf="@id/side_item_refresh_iv"
            android:textColor="@color/engineering_bg"
            android:text="检查更新"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        >
        <ImageView
            android:id="@+id/side_item_about_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/side_pull_icon_about_us"
            />
        <TextView
            android:id="@+id/side_item_about_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@color/engineering_bg"
            android:layout_toRightOf="@id/side_item_about_iv"
            android:text="关于我们"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:id="@+id/side_item_logout_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/side_pull_icon_quit"
            />
        <TextView
            android:id="@+id/side_item_logout_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@color/engineering_bg"
            android:layout_toRightOf="@id/side_item_logout_iv"
            android:text="退出登录"
            />
    </RelativeLayout>

</LinearLayout>